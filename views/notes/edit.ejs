<%- include("../partials/header") %>

	<div class="row">
		<h1 style="text-align: center;">
			Edit Note for <%=notebook.name%>
		</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/notebooks/<%=notebook._id%>/notes/<%=note._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="note[text]" value="<%=note.text%>">					
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">
						Submit
					</button>					
				</div>				
			</form>
			<a href="/notebooks/<%=notebook._id%>">Go Back</a>
		</div>
	</div>

<%- include("../partials/footer") %>