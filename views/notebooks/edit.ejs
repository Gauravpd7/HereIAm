<%- include("../partials/header") %>

	<div class="row">
		<h1 style="text-align: center;">
			Edit <%=notebook.name%>
		</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/notebooks/<%=notebook._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="notebook[name]" placeholder="name" value="<%=notebook.name%>">					
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="notebook[image]" placeholder="image url" value="<%=notebook.image%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="notebook[description]" placeholder="description" value="<%=notebook.description%>">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">
						Submit
					</button>					
				</div>				
			</form>
			<a href="/notebooks">Go Back</a>
		</div>
	</div>

<%- include("../partials/footer") %>